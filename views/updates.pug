doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    h1= title
    form(action="/create-player", method="post")
      label(for="name") Name:
      input(type="text", name="name", required)
      br

      label(for="strength") Strength:
      input(type="number", name="strength", required)
      br

      label(for="intelligence") Intelligence:
      input(type="number", name="intelligence", required)
      br

      button(type="submit") Create

    br
    a(href="/",class="back-btn") Return to the homepage